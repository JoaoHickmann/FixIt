<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#29B6F6"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joaop.fixit.RegistrarActivity"
    tools:showIn="@layout/activity_registrar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:scaleType="fitStart"
        android:src="@drawable/logo2"/>

    <EditText
        android:id="@+id/etNomeRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textColorHint="#ffffff"
        android:inputType="text"
        android:hint="Nome"/>

    <EditText
        android:id="@+id/etEmailRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textColorHint="#ffffff"
        android:inputType="text"
        android:hint="Email"/>

    <EditText
        android:id="@+id/etSenhaRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:hint="Senha"/>

    <EditText
        android:id="@+id/etConfirmarSenhaRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:hint="Confirmar senha"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/bRegistrarRegistrar"
        android:background="#008ac9"
        android:textColor="#ffffff"
        android:text="Registrar"/>


</LinearLayout>
